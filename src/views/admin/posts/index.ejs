<main class="content-wrapper">
  <div class="content-header">
    <h1><%= title %></h1>
    <a href="create-post.html" class="btn btn-primary">
      <i class="fas fa-plus"></i> Add New
    </a>
  </div>

  <!-- Filter Bar -->
  <div class="filter-bar">
    <form id="filterForm" class="filter-form" novalidate>
      <div class="form-group">
        <label for="filterTitle">Title</label>
        <input
          type="text"
          id="filterTitle"
          class="form-control"
          placeholder="Search posts..."
        />
        <span class="error-text" id="filterTitleError"
          >Please enter a valid title.</span
        >
      </div>

      <div class="form-group">
        <label for="filterTopic">Topic</label>
        <select id="filterTopic" class="form-control">
          <option value="">All Topics</option>
          <option value="productivity">Productivity</option>
          <option value="technology">Technology</option>
          <option value="business">Business</option>
          <option value="lifestyle">Lifestyle</option>
        </select>
        <span class="error-text" id="filterTopicError"
          >Please select a valid topic.</span
        >
      </div>

      <div class="form-group">
        <label for="filterStatus">Status</label>
        <select id="filterStatus" class="form-control">
          <option value="">All Statuses</option>
          <option value="published">Published</option>
          <option value="draft">Draft</option>
          <option value="scheduled">Scheduled</option>
        </select>
        <span class="error-text" id="filterStatusError"
          >Please select a valid status.</span
        >
      </div>

      <div class="form-group filter-actions">
        <button type="submit" class="btn btn-primary">
          <i class="fas fa-filter"></i> Filter
        </button>
        <button
          type="button"
          id="resetFilters"
          class="btn btn-secondary"
          style="margin-left: 10px"
        >
          <i class="fas fa-times"></i> Reset
        </button>
      </div>
    </form>
  </div>

  <!-- Data Table -->
  <div class="table-container">
    <table class="data-table">
      <thead>
        <tr>
          <th>Post</th>
          <th>Author</th>
          <th>Topic</th>
          <th>Published</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <!-- Post rows -->
        <% for (let post of posts) { %>
        <tr data-id="<%= post.id %>">
          <td>
            <div style="display: flex; align-items: center">
              <img
                src="https://via.placeholder.com/50"
                alt="Post"
                class="item-image"
              />
              <div style="margin-left: 15px">
                <div class="item-title"><%= post.title %></div>
                <div class="item-subtitle"><%= post.description %></div>
              </div>
            </div>
          </td>
          <td>John Doe</td>
          <td>Productivity</td>
          <td><%= post.published_at %></td>
          <td>
            <span class="badge badge-success">Published</span>
          </td>
          <td>
            <div class="action-buttons">
              <a
                href="post-detail.html?id=<%=post.id %>"
                class="action-btn view"
                title="View"
              >
                <i class="fas fa-eye"></i>
              </a>
              <a
                href="edit-post.html?id=<%=post.id %>"
                class="action-btn edit"
                title="Edit"
              >
                <i class="fas fa-edit"></i>
              </a>
              <a
                href="#"
                class="action-btn delete delete-item"
                title="Delete"
                data-id="<%=post.id %>"
                data-name="10 Tips for Better Productivity"
              >
                <i class="fas fa-trash"></i>
              </a>
            </div>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>

    <!-- Pagination -->
    <div class="pagination-container">
      <div class="pagination-info">Showing 1-6 of 32 posts</div>
      <ul class="pagination">
        <li class="active">
          <a href="#" data-page="1">1</a>
        </li>
        <li><a href="#" data-page="2">2</a></li>
        <li><a href="#" data-page="3">3</a></li>
        <li><a href="#" data-page="4">4</a></li>
        <li><a href="#" data-page="5">5</a></li>
        <li><a href="#" data-page="6">6</a></li>
      </ul>
    </div>
  </div>
</main>
